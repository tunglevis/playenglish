a:2:{i:0;a:12:{s:2:"id";s:3:"411";s:5:"title";s:63:"Trứng hấp vân thơm, ngon, dễ làm cho ngày bận rộn";s:3:"url";s:69:"/meo-hay/chi-tiet-411/trung-hap-van-thom-ngon-de-lam-cho-ngay-ban-ron";s:4:"desc";s:114:"Trứng hấp vân là món ăn đẹp mắt, thơm ngon của ngày bận rộn giúp gia đình ấm cúng hơn.";s:5:"image";a:3:{i:940;s:43:"http://meonho.net/upload/meohay/411/940.jpg";i:420;s:43:"http://meonho.net/upload/meohay/411/420.jpg";i:157;s:43:"http://meonho.net/upload/meohay/411/157.jpg";}s:4:"step";a:0:{}s:7:"content";s:2405:"<p><strong>Nguy&ecirc;n liệu:</strong></p>
